generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id        String  @id @default(cuid())
  S         String  @unique
  title     String
  short     String?
  includes  Json // подвязать таблицу потом
  timeline  String?
  priceFrom Int?
  isActive  Boolean @default(true)
  order     Int     @default(0)
  leads     Lead[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id          String     @id @default(cuid())
  name        String
  phone       String
  message     String
  serviceSlug String
  page        String?
  status      LeadStatus @default(NEW)
  ip          String?
  userAgent   String?
  serviceId   String?

  service   Service? @relation(fields: [serviceId], references: [id])
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([status])
}

enum LeadStatus {
  NEW
  IN_PROCESS
  WON
  LOST
}
