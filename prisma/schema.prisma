generator client {
  provider = "prisma-client"
  output   = "../prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id        String  @id @default(cuid())
  slug      String  @unique
  title     String
  short     String?
  includes  Json // подвязать таблицу потом
  timeline  String?
  priceFrom Int?
  isActive  Boolean @default(true)
  order     Int     @default(0)
  leads     Lead[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id          String     @id @default(cuid())
  name        String
  email       String
  phone       String
  message     String
  serviceSlug String
  page        String?
  status      LeadStatus @default(NEW)
  ip          String?
  userAgent   String?
  serviceId   String?

  service   Service? @relation(fields: [serviceId], references: [id])
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([status])
}

model Review {
  id        String  @id @default(cuid())
  name      String
  text      String
  rating    Int     @default(5)
  avatarUrl String?
  isActive  Boolean @default(true)
  order     Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([order])
  @@index([createdAt])
}

model Project {
  id         String @id @default(cuid())
  title      String
  short      String
  slug       String
  url        String
  previewUrl String

  task       String
  realized   Json
  technology Json
  result     String

  isActive Boolean @default(true)
  order    Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([createdAt])
  @@index([order])
}

enum LeadStatus {
  NEW
  IN_PROCESS
  WON
  LOST
}
